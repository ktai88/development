{
  "name": "sdc-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --base /sdc-platform",
    "build": "tsc && vite build --base /sdc-platform",
    "lint": "tsc --noEmit && eslint  src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix && prettier --write src  ",
    "lintx": "tsc --noEmit && eslint  src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix   ",
    "lint-ci": "tsc --noEmit && eslint --format gitlab src --ext ts,tsx --report-unused-disable-directives --max-warnings 0  && prettier --check src  ",
    "lint-staged-add": "lint-staged --concurrent false --relative",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --testTimeout=30000 --maxConcurrency=1 --retry=2 --coverage --reporter=junit --outputFile=./coverage/junit.xml"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*": "prettier --write"
  },
  "dependencies": {
    "@astron-sdc/design-system": "^3.37.0",
    "@nextui-org/react": "^2.6.11",
    "@types/node": "^24.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.1",
    "swr": "^2.3.3",
    "vite": "^5.4.19"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-gitlab": "^5.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^16.3.0",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.1"
  }
}
